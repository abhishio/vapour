#!/usr/bin/python2.7
try:
	import os
	import Tkinter as tk
except:
	import os
	import tkinter as tk


top=tk.Tk()
top.title("Vapour Cloud")
top.configure(background='white')
f=tk.Frame(top)
w,h=100,100
saasImg=tk.PhotoImage(width=w,height=h,file='root/saas')
saasLabel=tk.Label(f,image=saasImg)
saasLabel.image=saasImg
saasBtn=tk.Button(f,text='SaaS')
iaasImg=tk.PhotoImage(width=w,height=h,file='root/iaas')
iaasLabel=tk.Label(f,image=iaasImg)
iaasLabel.image=iaasImg
iaasBtn=tk.Button(f,text='IaaS')
boxImg=tk.PhotoImage(width=w,height=h,file='root/object')
boxLabel=tk.Label(f,image=boxImg)
boxLabel.image=boxImg
boxBtn=tk.Button(f,text='Vapour Box')
smartImg=tk.PhotoImage(width=w,height=h,file='root/block')
smartLabel=tk.Label(f,image=smartImg)
smartLabel.image=smartImg
smartBtn=tk.Button(f,text='Smart Storage')

saasLabel.grid(row=0,column=0,padx=5,pady=5,sticky='nsew')
iaasLabel.grid(row=0,column=1,padx=5,pady=5,sticky='nsew')
boxLabel.grid(row=2,column=0,padx=5,pady=5,sticky='nsew')
smartLabel.grid(row=2,column=1,padx=5,pady=5,sticky='nsew')
saasBtn.grid(row=1,column=0,padx=5,pady=5,sticky='ew')
iaasBtn.grid(row=1,column=1,padx=5,pady=5,sticky='ew')
boxBtn.grid(row=3,column=0,padx=5,pady=5,sticky='ew')
smartBtn.grid(row=3,column=1,padx=5,pady=5,sticky='ew')
f.configure(background='white')
f.pack()
quitBtn=tk.Button(top,text='Quit',command=top.quit).pack()


top.resizable(0,0)
tk.mainloop()


